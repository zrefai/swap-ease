{
  "name": "gql-service",
  "author": "Zaki Refai",
  "license": "ISC",
  "description": "A template for TypeScript projects with pre-configured tooling",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18.0"
  },
  "scripts": {
    "build": "npm run codegen && tsc",
    "codegen": "graphql-codegen",
    "postinstall": "npm run build",
    "start": "node dist/index.js",
    "dev": "nodemon --watch \"src/**\" --ext \"ts,json,graphql\" --exec \"npm run build && npm run start\" --ignore ./src/__generated__/ --ignore ./src/datasources/BarAPI.ts",
    "test": "jest"
  },
  "dependencies": {
    "@apollo/server": "^4.3.3",
    "@apollo/subgraph": "^2.3.1",
    "@graphql-tools/load-files": "^7.0.0",
    "@swap-ease/data": "file:../../libraries/data",
    "@types/amqplib": "^0.10.5",
    "amqplib": "^0.10.3",
    "dotenv": "^16.4.5",
    "graphql": "latest",
    "graphql-tag": "latest",
    "mongodb": "^6.5.0",
    "swap-ease-data": "file:../../libraries/data",
    "swap-ease-utils": "file:../../libraries/utils"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.0",
    "@graphql-codegen/typescript-resolvers": "^4.0.0",
    "@types/jest": "^29.0.3",
    "@types/node": "^20.0.0",
    "jest": "^29.0.3",
    "nodemon": "^3.0.0",
    "ts-jest": "^29.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "src"
    ],
    "globals": {
      "ts-jest": {
        "testRegext": "/__tests__/.*.test.ts",
        "verbose": true
      }
    }
  },
  "prettier": {
    "singleQuote": true
  }
}
